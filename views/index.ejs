<%- include("partial/header") %>



    <div class="table-container">
        <h2 class="todo-title">ToDo List</h2>
        <div>
            <a href="/add-todo" class="btn">Add ToDo</a>
        </div>
        <table>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>Action</th>
            </tr>
            <tr>
                <% for(let i=0 ; i < todos.length; i++) { %>
                    <td>
                        <%= todos[i].title %>
                    </td>
                    <td>
                        <%= todos[i].description %>
                    </td>
                    <td>
                        <%= moment(todos[i].createdAt).format("MM DD, YYYY, HH:mm:ss") %>
                    </td>
                    <td>
                        <%= moment(todos[i].updatedAt).format("MM DD, YYYY, HH:mm:ss")%>
                    </td>
                    <td>
                        <a href="/update-todo?id=<%= todos[i]._id %>" class="btn">Edit</a>
                        <a href="/delete-todo?id=<%= todos[i]._id %>" class="btn">Delete</a>
                    </td>
            </tr>
               <%}%>

        </table>
    </div>



<%- include("partial/footer") %>