<%- include("partial/header") %>



    <div class="table-container">
        <h2 class="todo-title">Update ToDo</h2>
        <div>
            <a href="/" class="btn">Back</a>

            <form action="/update-todo/<%= updateTodo._id %>" method="post">

                <div class="update-todo">
                    <div class="form-group">
                        <label for="title" class="text-light">Title</label>
                        <input type="text" name="title" value="<%= updateTodo.title %>" placeholder="enter todo title" />
                    </div>

                    <div class="form-group">
                        <label for="description" class="text-light">Description</label>
                        <input type="text" name="description" value="<%= updateTodo.description %>" placeholder="enter todo description" />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>


    
<%- include("partial/header") %>